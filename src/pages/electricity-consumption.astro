---
import Layout from "@layouts/Layout.astro";
import { Icon } from "astro-icon/components";
---

<Layout title="Electricity Consumption Report">
  <!-- Section 1: Overview -->
  <section
    class="min-h-screen w-full flex items-center justify-center bg-gradient-to-br from-blue-50 to-indigo-100 dark:from-slate-800 dark:to-slate-900"
  >
    <div class="container mx-auto px-6 py-20">
      <div class="text-center mb-16">
        <h1 class="text-5xl md:text-7xl font-bold text-gray-900 dark:text-white mb-6">Electricity Consumption</h1>
        <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          Comprehensive analysis of energy usage patterns and efficiency metrics for Strata NW2040
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
        <div class="bg-white dark:bg-slate-800 rounded-2xl p-8 shadow-lg">
          <div
            class="flex items-center justify-center w-16 h-16 bg-green-100 dark:bg-green-900 rounded-full mb-4 mx-auto"
          >
            <Icon name="bx:bxs-bolt" class="text-2xl text-green-600 dark:text-green-400" />
          </div>
          <h3 class="text-2xl font-bold text-center text-gray-900 dark:text-white mb-2">Current Usage</h3>
          <p class="text-4xl font-bold text-center text-green-600 dark:text-green-400 mb-2">2,847 kWh</p>
          <p class="text-sm text-center text-gray-500 dark:text-gray-400">This Month</p>
        </div>

        <div class="bg-white dark:bg-slate-800 rounded-2xl p-8 shadow-lg">
          <div
            class="flex items-center justify-center w-16 h-16 bg-yellow-100 dark:bg-yellow-900 rounded-full mb-4 mx-auto"
          >
            <Icon name="bx:trending-up" class="text-2xl text-yellow-600 dark:text-yellow-400" />
          </div>
          <h3 class="text-2xl font-bold text-center text-gray-900 dark:text-white mb-2">Efficiency</h3>
          <p class="text-4xl font-bold text-center text-yellow-600 dark:text-yellow-400 mb-2">87%</p>
          <p class="text-sm text-center text-gray-500 dark:text-gray-400">vs. Last Month</p>
        </div>

        <div class="bg-white dark:bg-slate-800 rounded-2xl p-8 shadow-lg">
          <div class="flex items-center justify-center w-16 h-16 bg-red-100 dark:bg-red-900 rounded-full mb-4 mx-auto">
            <Icon name="bx:bxs-shield-alt-2" class="text-2xl text-red-600 dark:text-red-400" />
          </div>
          <h3 class="text-2xl font-bold text-center text-gray-900 dark:text-white mb-2">Max Limit</h3>
          <p class="text-4xl font-bold text-center text-red-600 dark:text-red-400 mb-2">3,500 kWh</p>
          <p class="text-sm text-center text-gray-500 dark:text-gray-400">Monthly Cap</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Section 2: Monthly Trends -->
  <section
    class="min-h-screen w-full flex items-center justify-center bg-gradient-to-br from-green-50 to-emerald-100 dark:from-slate-900 dark:to-slate-800"
  >
    <div class="container mx-auto px-6 py-20">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-6xl font-bold text-gray-900 dark:text-white mb-6">Monthly Trends</h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          Track consumption patterns over the past 12 months with interactive controls
        </p>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-3xl p-8 shadow-2xl max-w-7xl mx-auto">
        <div class="mb-8">
          <div class="flex flex-wrap gap-4 justify-center mb-6">
            <button
              class="chart-toggle px-6 py-3 rounded-full bg-blue-600 text-white font-semibold transition-all duration-300 hover:bg-blue-700 active"
              data-chart="consumption"
            >
              Consumption
            </button>
            <button
              class="chart-toggle px-6 py-3 rounded-full bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 font-semibold transition-all duration-300 hover:bg-gray-300 dark:hover:bg-gray-600"
              data-chart="cost"
            >
              Cost Analysis
            </button>
            <button
              class="chart-toggle px-6 py-3 rounded-full bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 font-semibold transition-all duration-300 hover:bg-gray-300 dark:hover:bg-gray-600"
              data-chart="efficiency"
            >
              Efficiency
            </button>
          </div>
        </div>

        <div class="relative h-96">
          <canvas id="monthlyChart" class="w-full h-full"></canvas>
        </div>

        <div class="mt-8 grid md:grid-cols-3 gap-6">
          <div class="text-center">
            <p class="text-sm text-gray-500 dark:text-gray-400 mb-1">Peak Month</p>
            <p class="text-2xl font-bold text-gray-900 dark:text-white">December 2023</p>
            <p class="text-lg text-red-600 dark:text-red-400">3,245 kWh</p>
          </div>
          <div class="text-center">
            <p class="text-sm text-gray-500 dark:text-gray-400 mb-1">Lowest Month</p>
            <p class="text-2xl font-bold text-gray-900 dark:text-white">May 2024</p>
            <p class="text-lg text-green-600 dark:text-green-400">2,156 kWh</p>
          </div>
          <div class="text-center">
            <p class="text-sm text-gray-500 dark:text-gray-400 mb-1">Average</p>
            <p class="text-2xl font-bold text-gray-900 dark:text-white">2,678 kWh</p>
            <p class="text-lg text-blue-600 dark:text-blue-400">Monthly</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Section 3: Unit Breakdown -->
  <section
    class="min-h-screen w-full flex items-center justify-center bg-gradient-to-br from-purple-50 to-pink-100 dark:from-slate-800 dark:to-slate-900"
  >
    <div class="container mx-auto px-6 py-20">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-6xl font-bold text-gray-900 dark:text-white mb-6">Unit Breakdown</h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          Individual unit consumption analysis with comparative insights
        </p>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-3xl p-8 shadow-2xl max-w-7xl mx-auto">
        <div class="mb-8">
          <div class="flex flex-wrap gap-4 justify-center mb-6">
            <button
              class="unit-toggle px-6 py-3 rounded-full bg-purple-600 text-white font-semibold transition-all duration-300 hover:bg-purple-700 active"
              data-unit="all"
            >
              All Units
            </button>
            <button
              class="unit-toggle px-6 py-3 rounded-full bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 font-semibold transition-all duration-300 hover:bg-gray-300 dark:hover:bg-gray-600"
              data-unit="high"
            >
              High Usage
            </button>
            <button
              class="unit-toggle px-6 py-3 rounded-full bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 font-semibold transition-all duration-300 hover:bg-gray-300 dark:hover:bg-gray-600"
              data-unit="efficient"
            >
              Most Efficient
            </button>
          </div>
        </div>

        <div class="relative h-96">
          <canvas id="unitChart" class="w-full h-full"></canvas>
        </div>

        <div class="mt-8 grid md:grid-cols-2 gap-8">
          <div>
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4">Top Consumers</h3>
            <div class="space-y-3">
              <div class="flex justify-between items-center p-3 bg-red-50 dark:bg-red-900/20 rounded-lg">
                <span class="font-semibold text-gray-900 dark:text-white">Unit 204</span>
                <span class="text-red-600 dark:text-red-400 font-bold">3,245 kWh</span>
              </div>
              <div class="flex justify-between items-center p-3 bg-orange-50 dark:bg-orange-900/20 rounded-lg">
                <span class="font-semibold text-gray-900 dark:text-white">Unit 102</span>
                <span class="text-orange-600 dark:text-orange-400 font-bold">3,156 kWh</span>
              </div>
              <div class="flex justify-between items-center p-3 bg-yellow-50 dark:bg-yellow-900/20 rounded-lg">
                <span class="font-semibold text-gray-900 dark:text-white">Unit 301</span>
                <span class="text-yellow-600 dark:text-yellow-400 font-bold">3,089 kWh</span>
              </div>
            </div>
          </div>

          <div>
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4">Most Efficient</h3>
            <div class="space-y-3">
              <div class="flex justify-between items-center p-3 bg-green-50 dark:bg-green-900/20 rounded-lg">
                <span class="font-semibold text-gray-900 dark:text-white">Unit 103</span>
                <span class="text-green-600 dark:text-green-400 font-bold">2,156 kWh</span>
              </div>
              <div class="flex justify-between items-center p-3 bg-green-50 dark:bg-green-900/20 rounded-lg">
                <span class="font-semibold text-gray-900 dark:text-white">Unit 205</span>
                <span class="text-green-600 dark:text-green-400 font-bold">2,234 kWh</span>
              </div>
              <div class="flex justify-between items-center p-3 bg-green-50 dark:bg-green-900/20 rounded-lg">
                <span class="font-semibold text-gray-900 dark:text-white">Unit 401</span>
                <span class="text-green-600 dark:text-green-400 font-bold">2,267 kWh</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Section 4: Recommendations -->
  <section
    class="min-h-screen w-full flex items-center justify-center bg-gradient-to-br from-orange-50 to-red-100 dark:from-slate-900 dark:to-slate-800"
  >
    <div class="container mx-auto px-6 py-20">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-6xl font-bold text-gray-900 dark:text-white mb-6">Energy Efficiency</h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          Actionable recommendations to optimize energy consumption and reduce costs
        </p>
      </div>

      <div class="max-w-6xl mx-auto">
        <div class="grid md:grid-cols-2 gap-8 mb-12">
          <div class="bg-white dark:bg-slate-800 rounded-2xl p-8 shadow-lg">
            <div class="flex items-center mb-6">
              <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center mr-4">
                <Icon name="bx:bxs-bulb" class="text-2xl text-blue-600 dark:text-blue-400" />
              </div>
              <h3 class="text-2xl font-bold text-gray-900 dark:text-white">LED Upgrades</h3>
            </div>
            <p class="text-gray-600 dark:text-gray-300 mb-4">
              Replace traditional bulbs with LED lighting to reduce energy consumption by up to 80%.
            </p>
            <div class="bg-green-50 dark:bg-green-900/20 rounded-lg p-4">
              <p class="text-green-700 dark:text-green-400 font-semibold">
                Potential Savings: 15-20% reduction in lighting costs
              </p>
            </div>
          </div>

          <div class="bg-white dark:bg-slate-800 rounded-2xl p-8 shadow-lg">
            <div class="flex items-center mb-6">
              <div class="w-12 h-12 bg-green-100 dark:bg-green-900 rounded-full flex items-center justify-center mr-4">
                <Icon name="bx:bxs-thermometer" class="text-2xl text-green-600 dark:text-green-400" />
              </div>
              <h3 class="text-2xl font-bold text-gray-900 dark:text-white">Smart Thermostats</h3>
            </div>
            <p class="text-gray-600 dark:text-gray-300 mb-4">
              Install programmable thermostats to optimize heating and cooling schedules.
            </p>
            <div class="bg-green-50 dark:bg-green-900/20 rounded-lg p-4">
              <p class="text-green-700 dark:text-green-400 font-semibold">
                Potential Savings: 10-15% reduction in HVAC costs
              </p>
            </div>
          </div>

          <div class="bg-white dark:bg-slate-800 rounded-2xl p-8 shadow-lg">
            <div class="flex items-center mb-6">
              <div
                class="w-12 h-12 bg-purple-100 dark:bg-purple-900 rounded-full flex items-center justify-center mr-4"
              >
                <Icon name="bx:bxs-shield" class="text-2xl text-purple-600 dark:text-purple-400" />
              </div>
              <h3 class="text-2xl font-bold text-gray-900 dark:text-white">Insulation</h3>
            </div>
            <p class="text-gray-600 dark:text-gray-300 mb-4">
              Improve building insulation to reduce heat loss and energy waste.
            </p>
            <div class="bg-green-50 dark:bg-green-900/20 rounded-lg p-4">
              <p class="text-green-700 dark:text-green-400 font-semibold">
                Potential Savings: 20-25% reduction in heating costs
              </p>
            </div>
          </div>

          <div class="bg-white dark:bg-slate-800 rounded-2xl p-8 shadow-lg">
            <div class="flex items-center mb-6">
              <div
                class="w-12 h-12 bg-yellow-100 dark:bg-yellow-900 rounded-full flex items-center justify-center mr-4"
              >
                <Icon name="bx:bxs-sun" class="text-2xl text-yellow-600 dark:text-yellow-400" />
              </div>
              <h3 class="text-2xl font-bold text-gray-900 dark:text-white">Solar Panels</h3>
            </div>
            <p class="text-gray-600 dark:text-gray-300 mb-4">
              Consider solar panel installation for renewable energy generation.
            </p>
            <div class="bg-green-50 dark:bg-green-900/20 rounded-lg p-4">
              <p class="text-green-700 dark:text-green-400 font-semibold">
                Potential Savings: 30-50% reduction in total energy costs
              </p>
            </div>
          </div>
        </div>

        <div class="bg-white dark:bg-slate-800 rounded-2xl p-8 shadow-lg text-center">
          <h3 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">Total Potential Savings</h3>
          <p class="text-5xl font-bold text-green-600 dark:text-green-400 mb-2">$2,400 - $3,200</p>
          <p class="text-xl text-gray-600 dark:text-gray-300">Annual savings with recommended improvements</p>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
  import Chart from "chart.js/auto";

  // Sample data for charts
  const monthlyData = {
    consumption: {
      labels: ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"],
      datasets: [
        {
          label: "Consumption (kWh)",
          data: [2850, 2750, 2650, 2550, 2156, 2200, 2400, 2500, 2300, 2800, 3000, 3245],
          borderColor: "rgb(59, 130, 246)",
          backgroundColor: "rgba(59, 130, 246, 0.1)",
          borderWidth: 3,
          fill: true,
          tension: 0.4,
        },
        {
          label: "Max Limit",
          data: [3500, 3500, 3500, 3500, 3500, 3500, 3500, 3500, 3500, 3500, 3500, 3500],
          borderColor: "rgb(239, 68, 68)",
          backgroundColor: "rgba(239, 68, 68, 0.1)",
          borderWidth: 2,
          borderDash: [5, 5],
          fill: false,
        },
      ],
    },
    cost: {
      labels: ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"],
      datasets: [
        {
          label: "Cost ($)",
          data: [456, 440, 424, 408, 345, 352, 384, 400, 368, 448, 480, 519],
          borderColor: "rgb(16, 185, 129)",
          backgroundColor: "rgba(16, 185, 129, 0.1)",
          borderWidth: 3,
          fill: true,
          tension: 0.4,
        },
      ],
    },
    efficiency: {
      labels: ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"],
      datasets: [
        {
          label: "Efficiency (%)",
          data: [81, 79, 76, 73, 62, 63, 69, 71, 66, 80, 86, 93],
          borderColor: "rgb(168, 85, 247)",
          backgroundColor: "rgba(168, 85, 247, 0.1)",
          borderWidth: 3,
          fill: true,
          tension: 0.4,
        },
      ],
    },
  };

  const unitData = {
    all: {
      labels: [
        "101",
        "102",
        "103",
        "104",
        "201",
        "202",
        "203",
        "204",
        "301",
        "302",
        "303",
        "304",
        "401",
        "402",
        "403",
        "404",
      ],
      datasets: [
        {
          label: "Consumption (kWh)",
          data: [2456, 3156, 2156, 2678, 2890, 2456, 2789, 3245, 3089, 2567, 2345, 2789, 2267, 2456, 2567, 2345],
          backgroundColor: [
            "rgba(59, 130, 246, 0.8)",
            "rgba(239, 68, 68, 0.8)",
            "rgba(16, 185, 129, 0.8)",
            "rgba(245, 158, 11, 0.8)",
            "rgba(139, 92, 246, 0.8)",
            "rgba(59, 130, 246, 0.8)",
            "rgba(236, 72, 153, 0.8)",
            "rgba(239, 68, 68, 0.8)",
            "rgba(239, 68, 68, 0.8)",
            "rgba(59, 130, 246, 0.8)",
            "rgba(16, 185, 129, 0.8)",
            "rgba(236, 72, 153, 0.8)",
            "rgba(16, 185, 129, 0.8)",
            "rgba(59, 130, 246, 0.8)",
            "rgba(59, 130, 246, 0.8)",
            "rgba(16, 185, 129, 0.8)",
          ],
          borderColor: [
            "rgb(59, 130, 246)",
            "rgb(239, 68, 68)",
            "rgb(16, 185, 129)",
            "rgb(245, 158, 11)",
            "rgb(139, 92, 246)",
            "rgb(59, 130, 246)",
            "rgb(236, 72, 153)",
            "rgb(239, 68, 68)",
            "rgb(239, 68, 68)",
            "rgb(59, 130, 246)",
            "rgb(16, 185, 129)",
            "rgb(236, 72, 153)",
            "rgb(16, 185, 129)",
            "rgb(59, 130, 246)",
            "rgb(59, 130, 246)",
            "rgb(16, 185, 129)",
          ],
          borderWidth: 2,
        },
      ],
    },
    high: {
      labels: ["204", "102", "301", "201", "104"],
      datasets: [
        {
          label: "High Usage Units (kWh)",
          data: [3245, 3156, 3089, 2890, 2678],
          backgroundColor: [
            "rgba(239, 68, 68, 0.8)",
            "rgba(245, 158, 11, 0.8)",
            "rgba(245, 158, 11, 0.8)",
            "rgba(245, 158, 11, 0.8)",
            "rgba(59, 130, 246, 0.8)",
          ],
          borderColor: [
            "rgb(239, 68, 68)",
            "rgb(245, 158, 11)",
            "rgb(245, 158, 11)",
            "rgb(245, 158, 11)",
            "rgb(59, 130, 246)",
          ],
          borderWidth: 2,
        },
      ],
    },
    efficient: {
      labels: ["103", "205", "401", "303", "404"],
      datasets: [
        {
          label: "Most Efficient Units (kWh)",
          data: [2156, 2234, 2267, 2345, 2345],
          backgroundColor: [
            "rgba(16, 185, 129, 0.8)",
            "rgba(16, 185, 129, 0.8)",
            "rgba(16, 185, 129, 0.8)",
            "rgba(16, 185, 129, 0.8)",
            "rgba(16, 185, 129, 0.8)",
          ],
          borderColor: [
            "rgb(16, 185, 129)",
            "rgb(16, 185, 129)",
            "rgb(16, 185, 129)",
            "rgb(16, 185, 129)",
            "rgb(16, 185, 129)",
          ],
          borderWidth: 2,
        },
      ],
    },
  };

  // Initialize charts
  let monthlyChart, unitChart;

  function initCharts() {
    // Monthly Chart
    const monthlyCtx = document.getElementById("monthlyChart") as HTMLCanvasElement;
    if (monthlyCtx) {
      monthlyChart = new Chart(monthlyCtx, {
        type: "line",
        data: monthlyData.consumption,
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              labels: {
                color: window.matchMedia("(prefers-color-scheme: dark)").matches ? "#e5e7eb" : "#374151",
              },
            },
          },
          scales: {
            x: {
              ticks: {
                color: window.matchMedia("(prefers-color-scheme: dark)").matches ? "#e5e7eb" : "#374151",
              },
              grid: {
                color: window.matchMedia("(prefers-color-scheme: dark)").matches ? "#374151" : "#e5e7eb",
              },
            },
            y: {
              ticks: {
                color: window.matchMedia("(prefers-color-scheme: dark)").matches ? "#e5e7eb" : "#374151",
              },
              grid: {
                color: window.matchMedia("(prefers-color-scheme: dark)").matches ? "#374151" : "#e5e7eb",
              },
            },
          },
        },
      });
    }

    // Unit Chart
    const unitCtx = document.getElementById("unitChart") as HTMLCanvasElement;
    if (unitCtx) {
      unitChart = new Chart(unitCtx, {
        type: "bar",
        data: unitData.all,
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              labels: {
                color: window.matchMedia("(prefers-color-scheme: dark)").matches ? "#e5e7eb" : "#374151",
              },
            },
          },
          scales: {
            x: {
              ticks: {
                color: window.matchMedia("(prefers-color-scheme: dark)").matches ? "#e5e7eb" : "#374151",
              },
              grid: {
                color: window.matchMedia("(prefers-color-scheme: dark)").matches ? "#374151" : "#e5e7eb",
              },
            },
            y: {
              ticks: {
                color: window.matchMedia("(prefers-color-scheme: dark)").matches ? "#e5e7eb" : "#374151",
              },
              grid: {
                color: window.matchMedia("(prefers-color-scheme: dark)").matches ? "#374151" : "#e5e7eb",
              },
            },
          },
        },
      });
    }
  }

  // Chart toggle functionality
  function setupChartToggles() {
    const chartToggles = document.querySelectorAll(".chart-toggle");
    chartToggles.forEach((toggle) => {
      toggle.addEventListener("click", () => {
        // Update button states
        chartToggles.forEach((t) => {
          t.classList.remove("active", "bg-blue-600", "text-white");
          t.classList.add("bg-gray-200", "dark:bg-gray-700", "text-gray-700", "dark:text-gray-300");
        });

        toggle.classList.add("active", "bg-blue-600", "text-white");
        toggle.classList.remove("bg-gray-200", "dark:bg-gray-700", "text-gray-700", "dark:text-gray-300");

        // Update chart data
        const chartType = (toggle as HTMLElement).dataset.chart;
        if (monthlyChart && chartType && monthlyData[chartType as keyof typeof monthlyData]) {
          monthlyChart.data = monthlyData[chartType as keyof typeof monthlyData];
          monthlyChart.update();
        }
      });
    });

    const unitToggles = document.querySelectorAll(".unit-toggle");
    unitToggles.forEach((toggle) => {
      toggle.addEventListener("click", () => {
        // Update button states
        unitToggles.forEach((t) => {
          t.classList.remove("active", "bg-purple-600", "text-white");
          t.classList.add("bg-gray-200", "dark:bg-gray-700", "text-gray-700", "dark:text-gray-300");
        });

        toggle.classList.add("active", "bg-purple-600", "text-white");
        toggle.classList.remove("bg-gray-200", "dark:bg-gray-700", "text-gray-700", "dark:text-gray-300");

        // Update chart data
        const unitType = (toggle as HTMLElement).dataset.unit;
        if (unitChart && unitType && unitData[unitType as keyof typeof unitData]) {
          unitChart.data = unitData[unitType as keyof typeof unitData];
          unitChart.update();
        }
      });
    });
  }

  // Initialize everything when DOM is loaded
  document.addEventListener("DOMContentLoaded", () => {
    initCharts();
    setupChartToggles();
  });
</script>

