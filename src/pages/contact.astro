---
import Contactform from "@components/contactform.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Layout from "@layouts/Layout.astro";
import { Icon } from "astro-icon/components";
---

<Layout title="Contact">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Contact</Fragment>
      <Fragment slot="desc"></Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div>
        <h2 class="font-medium text-2xl text-gray-800">Contact MountainGate</h2>
        <p class="text-lg leading-relaxed text-slate-500 mt-3">
          The Mountaingate Strata Council is a dedicated team of volunteers who provide guidance and planning for the
          maintenance and improvements of the strata complex. The council members are also residents. Their privacy is
          important. Please use the following contact form to reach the Strata Council. Private phone numbers and email
          addresses will not be made publicly available.
        </p>
        <p class="text-lg leading-relaxed text-slate-500 mt-3">
          Note: The council members are also residents. Their privacy is important and therefore phone numbers and email
          addresses will not be made publicly available. Please use the following contact form to reach the Strata
          Council.
        </p>
      </div>
      <div>
        <Contactform />
      </div>
    </div>
  </Container>
</Layout>
