---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  {
    title: "Bylaws & Rules",
    path: "/bylaws-and-rules",
  },
  {
    title: "Roles and Responsibilities",
    path: "/roles-and-responsibilities",
  },
  {
    title: "Meetings",
    path: "/meetings",
  },
  {
    title: "Forms, Links & Reports",
    path: "/forms-links-reports",
  },
  {
    title: "Contact",
    path: "/contact",
  },
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="text-lg"
          ><span class="font-bold text-slate-800">Mountain</span><span
            class="text-slate-500">Gate</span
          >
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <>
                <li>
                  <a
                    href={item.path}
                    class={`flex lg:px-3 py-2 items-center text-gray-600 hover:text-gray-800 hover:underline ${Astro.url.pathname === item.path && "text-gray-900	underline"} `}
                  >
                    <span>{item.title}</span>
                  </a>
                </li>
              </>
            ))
          }
        </ul>
      </MenuItems>
    </Astronav>
  </header>
</Container>
