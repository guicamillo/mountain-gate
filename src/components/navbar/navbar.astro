---
import Container from "@components/container.astro";
import ThemeToggle from "@components/ThemeToggle.astro";
import heroImage from "assets/logo.svg";
import heroDarkImage from "assets/logo-dark.svg";
import { Astronav, MenuIcon, MenuItems } from "astro-navbar";
import { Image } from "astro:assets";

const menuitems = [
  {
    title: "Bylaws & Rules",
    path: `/bylaws-and-rules/`,
  },
  {
    title: "Roles and Responsibilities",
    path: `/roles-and-responsibilities/`,
  },
  {
    title: "Meetings & Reports",
    path: `/meetings-reports/`,
  },
  {
    title: "Forms & Links",
    path: `/forms-links/`,
  },
  //   {
  //     title: "Green Bin Schedule",
  //     path: `/green-bin-schedule/`,
  //   },
  {
    title: "Contact",
    path: `/contact/`,
  },
];
---

<div
  class="sticky top-0 z-40 w-full backdrop-blur flex-none lg:z-50 lg:border-b lg:border-slate-900/10 dark:border-slate-50/[0.06] bg-white/75 supports-backdrop-blur:bg-white/60 dark:bg-transparent print:hidden"
>
  <Container>
    <header class="z-40 sticky py-5 top-0 flex flex-col lg:flex-row justify-between items-center">
      <Astronav>
        <div class="flex w-full lg:w-auto items-center justify-between">
          <a href={`/`} class="text-lg tracking-tighter">
            <div class="flex flex-row gap-1 items-center">
              <div class="relative w-[50px] h-[50px]">
                <!-- Replace Image components with inline SVG -->
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" id="Mountain-Logo" class="w-full h-full">
                  <defs>
                    <style>
                      .mountains {
                        transition: all 500ms ease;
                      }
                      .mountains path[fill="#d9edff"] {
                        transition: fill 500ms ease;
                      }
                      .mountains path[fill="#ffffff"] {
                        transition: fill 500ms ease;
                      }
                      .mountains path[fill="#b0d9ff"] {
                        transition: fill 500ms ease;
                      }
                      .mountains path[stroke="#020064"] {
                        transition: stroke 500ms ease;
                      }

                      :global(.dark) .mountains path[fill="#d9edff"] {
                        fill: #1e293b;
                      }
                      :global(.dark) .mountains path[fill="#ffffff"] {
                        fill: #1e293b;
                      }
                      :global(.dark) .mountains path[fill="#b0d9ff"] {
                        fill: #334155;
                      }
                      :global(.dark) .mountains path[stroke="#020064"] {
                        stroke: #e2e8f0;
                      }

                      .sun {
                        transform-origin: center;
                        transition: all 500ms ease;
                      }
                      .moon {
                        transform-origin: center;
                        transition: all 500ms ease;
                        opacity: 0;
                        transform: rotate(-180deg);
                      }

                      :global(.dark) .sun {
                        opacity: 0;
                        transform: rotate(180deg);
                      }
                      :global(.dark) .moon {
                        opacity: 1;
                        transform: rotate(0);
                      }
                    </style>
                  </defs>
                  <g class="mountains">
                    <path
                      fill="#d9edff"
                      d="M5.9996 54.186C5.9834 88.4117 43.0237 109.8204 72.6722 92.7216C86.4452 84.7785 94.9283 70.0853 94.9207 54.186C94.937 19.9602 57.8966 -1.4485 28.2481 15.6503C14.4752 23.5935 5.9921 38.2867 5.9996 54.186"
                      stroke-width="1"></path>
                    <path
                      d="M65.7513 43.4376C56.499 52.4665 49.0363 62.3056 44.1768 73.3218L57.9751 96.6303L67.2752 78.0291C78.2447 58.6209 72.985 54.2882 65.7513 43.4376Z"
                      stroke="#020064"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      fill="#ffffff"
                      stroke-width="1"></path>
                    <path
                      d="M94.0715 62.8747C85.3684 55.3824 75.8719 48.8646 65.7513 43.4376C72.985 54.2882 78.2447 58.6209 67.2763 78.0291L57.9751 96.6303L58.7087 97.8696C76.5261 94.5006 90.5164 80.6559 94.0715 62.8747Z"
                      fill="#b0d9ff"
                      stroke-width="1"></path>
                    <path
                      d="M14.0981 79.7441C21.5727 90.3911 33.3392 97.226 46.2909 98.4442C43.6644 86.5922 31.5722 73.7897 35.6115 59.1467C29.2458 63.2159 20.9561 71.8857 14.0981 79.7441Z"
                      fill="#ffffff"
                      stroke-width="1"></path>
                    <path
                      d="M94.0715 62.8747C85.3684 55.3824 75.8719 48.8646 65.7513 43.4376C72.985 54.2882 78.2447 58.6209 67.2763 78.0291L57.9751 96.6303"
                      fill="none"
                      stroke="#020064"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1"></path>
                    <path
                      d="M61.3819 72.7205L50.9014 72.0636C46.1404 67.3757 41.0289 63.0575 35.6115 59.1467C31.5722 73.7897 43.6644 86.5922 46.2909 98.4442C47.679 98.5759 49.0725 98.643 50.4668 98.6454C59.3107 98.6592 67.9559 96.0227 75.287 91.076Z"
                      fill="#b0d9ff"
                      stroke-width="1"></path>
                    <path
                      d="M46.2909 98.4442C43.6644 86.5922 31.5722 73.7897 35.6115 59.1467C29.2458 63.2159 20.9561 71.8857 14.0981 79.7441"
                      fill="none"
                      stroke="#020064"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1"></path>
                    <path
                      d="M75.287 91.076L61.3819 72.7205L50.9014 72.0636C46.1404 67.3757 41.0289 63.0575 35.6115 59.1467C31.5722 73.7897 43.6644 86.5922 46.2909 98.4442"
                      fill="none"
                      stroke="#020064"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1"></path>
                  </g>

                  <!-- Sun -->
                  <g class="sun" stroke="#020064" stroke-linecap="round" stroke-linejoin="round">
                    <path
                      fill="none"
                      d="M30.0305 4.5646V1M14.9084 10.828L12.3875 8.3082M8.6439 25.9513H5.0793M14.9084 41.0734L12.3875 43.5943M46.342 10.828L48.8618 8.3082M52.6054 25.9513H56.17M46.342 41.0734L48.8618 43.5943M30.0305 47.3379V50.9026"
                      stroke-width="1"></path>
                    <path
                      fill="#ffffff"
                      d="M13.3967 25.9513C13.3967 38.756 27.2582 46.7589 38.3474 40.3566C43.494 37.3852 46.6644 31.894 46.6644 25.9513C46.6644 13.1466 32.8028 5.1436 21.7136 11.546C16.5671 14.5173 13.3967 20.0086 13.3967 25.9513"
                      stroke-width="1"></path>
                  </g>

                  <!-- Moon -->
                  <g class="moon">
                    <path
                      fill="#e2e8f0"
                      stroke="#e2e8f0"
                      stroke-width="1"
                      d="M46.6644 25.9513C46.6644 13.1466 32.8028 5.1436 21.7136 11.546C16.5671 14.5173 13.3967 20.0086 13.3967 25.9513C13.3967 38.756 27.2582 46.7589 38.3474 40.3566C43.494 37.3852 46.6644 31.894 46.6644 25.9513"
                    ></path>
                  </g>
                </svg>
              </div>
              <div class="flex flex-col gap-px-1">
                <div>
                  <span class="font-bold text-slate-900 dark:text-white">Mountain</span>
                  <span class="text-slate-800 dark:text-gray-200">Gate</span>
                </div>
                <span class="font-thin text-xs text-slate-400 dark:text-gray-400">Strata NW2040</span>
              </div>
            </div>
          </a>
          <div class="block lg:hidden pt-1 px-2 bg-slate-100/75 border-2 rounded-md">
            <MenuIcon class="w-4 h-4 text-gray-800" />
          </div>
        </div>
        <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
          <ul class="flex flex-col lg:flex-row lg:gap-3">
            {
              menuitems.map((item, index) => (
                <>
                  <li>
                    <a
                      href={item.path}
                      class={`flex lg:px-3 py-2 items-center text-slate-700 dark:text-gray-100 hover:text-gray-900 dark:hover:text-white hover:underline ${
                        Astro.url.pathname === item.path && "text-gray-900 dark:text-white underline"
                      } `}
                    >
                      <span>{item.title}</span>
                    </a>
                  </li>
                </>
              ))
            }
          </ul>
          <ThemeToggle />
        </MenuItems>
      </Astronav>
    </header>
  </Container>
</div>
