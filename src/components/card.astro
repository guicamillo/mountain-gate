---
import Link from "@components/link.astro";
const { plan } = Astro.props;
---

<div class="flex flex-col w-full order-first lg:order-none border-2 border-[#D8DEE9] dark:border-gray-700 rounded-md py-5 px-6 bg-white dark:bg-gray-800">
  <div class="text-center">
    <h4 class="text-lg font-medium text-gray-400 dark:text-gray-300">{plan.name}</h4>
    <p class="mt-3 text-4xl font-bold text-black dark:text-white">
      {plan.price}
    </p>
  </div>
  <div class="flex mt-8">
    <a
      href={plan.button.link}
      class="flex-1 text-center px-4 py-2 bg-black dark:bg-gray-700 hover:bg-gray-800 dark:hover:bg-gray-600 text-white font-medium rounded-md"
      download>
      {plan.button.text}
    </a>
  </div>
</div>
